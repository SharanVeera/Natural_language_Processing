      "cell_type": "code",
      "source": [
        "import numpy as np\n",
        "\n",
        "def document_vector(doc):\n",
        "    doc = [word for word in doc if word in model.wv]\n",
        "    return np.mean(model.wv[doc], axis=0)\n",
        "\n",
        "doc_vectors = [document_vector(doc) for doc in preprocessed_docs]\n",
        "\n",
        "print(doc_vectors[0])  # Vector for first document\n"
